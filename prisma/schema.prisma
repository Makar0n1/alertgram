generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  telegramToken String?
  chatId        String?
  rules         Rule[]
}

model Rule {
  id        String @id @default(uuid())
  userId    String
  condition String
  user      User   @relation(fields: [userId], references: [id])
}